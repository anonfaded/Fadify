{
  "manifest_version": 2,
  "name": "Fadify",
  "version": "1.0",
  "description": "Custom themes for ChatGPT",
  "permissions": ["tabs", "activeTab"],
  "icons": {
    "16": "assets/fadseclab/fadify.png",
    "32": "assets/fadseclab/fadify.png",
    "48": "assets/fadseclab/fadify.png",
    "128": "assets/fadseclab/fadify.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "assets/fadseclab/fadify.png",
      "32": "assets/fadseclab/fadify.png",
      "48": "assets/fadseclab/fadify.png",
      "128": "assets/fadseclab/fadify.png"
    },
    "default_popup": "popup/popup.html",
    "default_title": "Fadify"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://chat.openai.com/*", "*://chatgpt.com/*"],
      "js": ["containers/chatgpt/ChatGPTContainer.js", "containers/chatgpt/chatgpt.js"],
      "css": ["containers/chatgpt/chatgpt.css"]
    }
  ],
  "web_accessible_resources": [
    "assets/space-background-webm.webm"
  ]
}
