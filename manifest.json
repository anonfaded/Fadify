{
  "manifest_version": 2,
  "name": "Fadify",
  "version": "1.0",
  "description": "Custom themes for ChatGPT",
  "permissions": ["tabs", "activeTab"],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Fadify"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://chat.openai.com/*", "*://chatgpt.com/*"],
      "js": ["containers/chatgpt/ChatGPTContainer.js", "containers/chatgpt/chatgpt.js"],
      "css": ["containers/chatgpt/chatgpt.css"]
    }
  ],
  "web_accessible_resources": [
    "assets/space-background-webm.webm"
  ]
}
